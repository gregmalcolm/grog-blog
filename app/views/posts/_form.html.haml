= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :article
    = f.text_area :article
  .field
    = f.label :published_on
    = f.datetime_select :published_on
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :properties
    = f.text_field :properties
  .actions
    = f.submit 'Save'
